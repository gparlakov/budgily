{
  "name": "budgily-api",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "budgily-api/src",
  "projectType": "application",
  "implicitDependencies": ["budgily-data"],
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/budgily-api",
        "format": ["cjs"],
        "bundle": true,
        "main": "budgily-api/src/main.ts",
        "tsConfig": "budgily-api/tsconfig.app.json",
        "assets": ["budgily-api/src/assets"],
        "generatePackageJson": true,
        "external": ["react"],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          },
          "loader": {
            ".xml":"file",
            ".csv":"file",
            ".graphql":"file"

          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "bundle": true,
            "outExtension": {
              ".js": ".js"
            },
            "loader": {
              ".xml": "file",
              ".csv": "file",
              ".graphql":"file"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "budgily-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "budgily-api:build:development"
        },
        "production": {
          "buildTarget": "budgily-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["budgily-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "budgily-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
